{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.event_list'|trans }}
{% endblock %}



{% block body %}
    <h1>{{ 'title.event_list_all'|trans }}</h1>

    <nav>
        <menu>
            <li>
                <a href="{{ url('event_create') }}" title="{{ 'action.create'|trans }}">
                    {{ 'action.create'|trans }}
                </a>
            </li>
            <li>
                <a href="{{ url('event_list') }}" title="{{ 'title.event_list_all'|trans }}">
                    {{ 'title.event_list_all'|trans }}
                </a>
            </li>
        </menu>
    </nav>

    <h2>{{ 'title.event_list'|trans }}</h2>

    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.duration_from'|trans, 'event.dateFrom') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'event.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.duration_to'|trans, 'event.dateTo') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.category'|trans, 'event.category.title' )}}</th>
                <th>{{ 'label.tags'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for event in pagination.items %}

                <tr>
                    <td>{{ event.dateFrom|date('d.m.Y') }}</td>
                    <td>{{ event.title }}</td>
                    <td>{{ event.dateTo|date('d.m.Y') }}</td>
                    <td>{{ event.category.title }}</td>
                    <td>{{ event.tags|join(', ') }}</td>
                    <td>
                        <a href="{{ url('event_show', {id: event.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'action.show'|trans }}
                        </a>
                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}